<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/simple_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Simple Message"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/dialog_error_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Dialog Error message"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/snack_bar_error_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_textview" />

    <TextView
        android:id="@+id/snack_bar_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show snack Error message"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/toast_error_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_error_textview" />

    <TextView
        android:id="@+id/toast_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Toast Error message"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack_bar_error_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>